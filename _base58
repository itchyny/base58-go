#compdef base58

_base58()
{
  _arguments -C \
    '(-D --decode)'{-D,--decode}'[decodes input]' \
    '(-e --encoding)'{-e,--encoding}'=-[encoding name (default: flickr)]:base58:(flickr ripple bitcoin)' \
    '(-i --input)'{-i,--input}'[input file]' \
    '(-o --output)'{-o,--output}'[output file]' \
    '(-v --version)'{-v,--version}'[print version]' \
    '(-h --help)'{-h,--help}'[print help]' \
    && ret=0
}
